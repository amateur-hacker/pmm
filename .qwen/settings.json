{
  "mcpServers": {
    "shadcn": {
      "command": "bunx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    },
    "next-devtools": {
      "command": "bunx",
      "args": [
        "-y",
        "next-devtools-mcp@latest"
      ]
    },
    "drizzle": {
      "command": "bunx",
      "args": [
        "github:defrex/drizzle-mcp",
        "../drizzle.config.ts"
      ]
    }
  },
  "$version": 2
}